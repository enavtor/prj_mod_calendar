<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding android:left="@dimen/dpi_3dp"
                        android:top="@dimen/dpi_3dp"
                        android:right="@dimen/dpi_3dp"
                        android:bottom="@dimen/dpi_3dp"/>
                    <stroke android:width="@dimen/dpi_2dp"
                        android:color="@color/sh_green_medium" />
                    <size android:width="@dimen/dpi_20dp"
                        android:height="@dimen/dpi_20dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="@dimen/dpi_2dp"
                        android:color="@color/ir_blue" />
                    <size android:width="@dimen/dpi_20dp"
                        android:height="@dimen/dpi_20dp"/>
                    <solid android:color="@color/focus_lighter" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false" >
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <padding android:left="@dimen/dpi_3dp"
                        android:top="@dimen/dpi_3dp"
                        android:right="@dimen/dpi_3dp"
                        android:bottom="@dimen/dpi_3dp"/>
                    <stroke android:width="@dimen/dpi_2dp"
                        android:color="@color/sh_green_medium" />
                    <size android:width="@dimen/dpi_20dp"
                        android:height="@dimen/dpi_20dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="@dimen/dpi_2dp"
                        android:color="@color/ir_blue" />
                    <size android:width="@dimen/dpi_20dp"
                        android:height="@dimen/dpi_20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>