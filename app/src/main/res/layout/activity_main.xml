<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:focusable="false"
    android:background="@drawable/common_background"
    tools:context="com.shtvsolution.calendario.views.activities.MainActivity">

    <RelativeLayout
        android:id="@+id/overscan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/overscan"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include
                layout="@layout/element_header"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_above="@+id/footer"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingStart="5dp"
                android:paddingBottom="20dp"/>

            <RelativeLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/left"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingBottom="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include
                layout="@layout/element_footer"
                android:layout_height="@dimen/footer_status_width"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/loading_layout_content_background"
            android:padding="20dp">

            <TextView
                android:id="@+id/text_layout_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="95dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="55sp" />

            <TextView
                android:id="@+id/text_please_stand_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_layout_loading"
                android:layout_centerInParent="true"
                android:layout_marginBottom="15dp"
                android:textColor="@color/sh_cyan_medium_darker"
                android:text="@string/loading_layout_stand_by"
                android:textSize="40sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_below="@+id/text_please_stand_by"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/progress_bar"
                android:indeterminateTintMode="src_atop" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>