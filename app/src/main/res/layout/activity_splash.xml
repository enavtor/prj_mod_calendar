<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/dpi_60sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_marginStart="@dimen/dpi_8dp" />

    <ProgressBar
        android:id="@+id/progressBarSplash"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/dpi_60dp"
        android:layout_height="@dimen/dpi_60dp"
        android:layout_marginTop="@dimen/dpi_60dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/progress_bar"/>
</LinearLayout>
