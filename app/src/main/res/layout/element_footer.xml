<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/virtual_back_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/calendar_focus"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <ImageView
            android:id="@+id/virtual_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleX="0.65"
            android:scaleY="0.8"
            android:layout_gravity="center"
            android:background="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/virtual_back"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="6dp"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <!--Delete all events button-->
        <RelativeLayout
            android:id="@+id/ir_delete_all_events_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:background="@drawable/calendar_focus"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ir_delete_all_events"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/ir_red_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/ir_delete_all_events"
                android:fontFamily="sans-serif-light"
                android:text="@string/delete_all_events"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </RelativeLayout>

        <!--Move to current day button-->
        <RelativeLayout
            android:id="@+id/ir_move_to_current_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/calendar_focus"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ir_move_to_current"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ir_green_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ir_move_to_current"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-light"
                android:text="@string/back_to_current"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </RelativeLayout>

        <!--show all events button-->
        <RelativeLayout
            android:id="@+id/ir_show_all_events_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/calendar_focus"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ir_show_all_events"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ir_yellow_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ir_show_all_events"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-light"
                android:text="@string/show_all_events"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </RelativeLayout>

        <!--Move to selected day button-->
        <RelativeLayout
            android:id="@+id/ir_add_new_event_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/calendar_focus"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ir_add_new_event"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ir_blue_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ir_add_new_event"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-light"
                android:text="@string/new_event_button"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:textSize="15sp" />
</RelativeLayout>