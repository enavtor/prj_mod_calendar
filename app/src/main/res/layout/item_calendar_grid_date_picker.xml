<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center"
    android:focusable="false">

    <TextView
        android:id="@+id/calendar_item_text"
        android:layout_height="@dimen/dpi_32dp"
        android:layout_width="@dimen/dpi_32dp"
        android:padding="@dimen/dpi_2dp"
        android:background="@drawable/date_picker_focus_calendar"
        android:gravity="center"
        android:textSize="@dimen/dpi_17sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:clickable="true"/>
</LinearLayout>